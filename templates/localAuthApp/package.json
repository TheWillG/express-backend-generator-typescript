{
  "name": "template",
  "version": "1.0.0",
  "description": "Template for generator-express-backend-typescript",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run serve",
    "dev": "ts-node-dev index.ts",
    "build": "npm run tslint && npm run build-ts",
    "serve": "node dist/index.js",
    "test": "./node_modules/.bin/jest",
    "ci": "./node_modules/.bin/jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "./node_modules/.bin/prettier --write src/**/*.ts && prettier --write src/*.ts",
    "lint-tests": "./node_modules/.bin/prettier --write __tests__/*.spec.ts",
    "tslint": "node_modules/.bin/tslint -c tslint.json -p tsconfig.json"
  },
  "author": "Will Garcia",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "celebrate": "^8.0.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "helmet": "^3.13.0",
    "log4js": "^2.10.0",
    "mongoose": "^5.2.0",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "cryptiles": "^4.1.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.38",
    "@types/jasmine": "^2.8.8",
    "@types/jest": "^23.3.1",
    "@types/joi": "^13.3.0",
    "@types/mongoose": "^5.0.18",
    "@types/morgan": "^1.7.35",
    "@types/passport": "^0.4.6",
    "@types/passport-local": "^1.0.33",
    "chai": "^4.1.2",
    "jest": "^23.5.0",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.0",
    "ts-node-dev": "^1.0.0-pre.32",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
